@model IEnumerable<MyWebsite.Models.Model.ContactInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mb-5">İletişim Bilgileri Bölümü</h2>

<table class="table table-bordered table-responsive-lg">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongAdress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortAdress)
        </th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortAdress)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
            </td>
        </tr>
    }

</table>
