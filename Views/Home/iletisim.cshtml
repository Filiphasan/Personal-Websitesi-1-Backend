@model MyWebsite.Models.Model.Messages
@{
    ViewBag.Title = "iletisim";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!--MAP-->
<div class="container-fluid map p-0 mx-0 my-5">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d50943.0924871384!2d37.34511757069415!3d37.058834798536445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1531e6b4f7f18c2f%3A0xc02e8b35116baad0!2sGaziantep!5e0!3m2!1str!2str!4v1598129581147!5m2!1str!2str"
            width="100%" height="600" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
            tabindex="0"></iframe>
</div>
<!--CONTACT-->
<section id="contact">
    <div class="cerceve">
        <div class="row">
            <div class="col-lg-8 p-5 contact-bg mx-auto text-center">
                <h1 class="pt-3 pb-5"><i class="fas fa-envelope-open-text"></i> Bana Ulaşın</h1>
                <form action="/Home/iletisim" method="post">
                    <div class="col-lg-12 form-group ">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text"  class="form-control first-input" placeholder="Adınız" name="Name" required>
                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                <input type="text"  class="form-control" placeholder="Soyadınız" name="Surname" required>
                                @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <input type="email"  class="my-3 form-control" placeholder="Mail Adresiniz" name="Mail" required>
                        @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                        <input type="text"  class="my-3 form-control" placeholder="Konu" name="Subject" required>
                        @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                        <textarea name="Message" class="my-3 form-control" placeholder="Mesajınız" rows="5" required></textarea>
                        @Html.ValidationMessageFor(x => x.Message, "", new { @class = "text-danger" })
                        <div class="col-12">
                            <button class="btn btnContact w-50 font-weight-bold"><i class="fas fa-paper-plane"></i> Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

