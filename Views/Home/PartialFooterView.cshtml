@model IEnumerable<MyWebsite.Models.Model.SocialMediaAccount>
<footer id="footer">
    <div class="cerceve text-center">
        <div class="row">
            <div class="col-lg-6 pb-3 pt-4">
                <h4 class="adress">
                    <i class="fas fa-map-marker-alt"></i> @ViewBag.longAdress
                </h4>
            </div>
            <div class="col-lg-6 pb-3 pt-4">
                <ul class="list-inline">
                    @foreach (var item in Model)
                    {
                        <li class="list-inline-item">
                            <a href="@item.Facebook" title="@item.Facebook" class="px-2">
                                <i class="fab fa-facebook-square fa-2x"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="@item.Twitter" title="@item.Twitter" class="px-2"><i class="fab fa-twitter-square fa-2x"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="@item.Linkedin" title="@item.Linkedin" class="px-2">
                                <i class="fab fa-linkedin fa-2x"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="@item.Github" title="@item.Github" class="px-2"><i class="fab fa-github fa-2x"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="@item.Youtube" title="@item.Youtube" class="px-2">
                                <i class="fab fa-youtube fa-2x"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</footer>
