@using MyWebsite.Helper
@model IEnumerable<MyWebsite.Models.Model.HomePageSlider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    int number = 0;
    int number2 = 0;
}

<section id="home">
    <div class="cerceve">
        <div id="carouselExampleControls" class="carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var item in Model)
                {
                    if (number2 < 1)
                    {
                        <li data-target="#carouselExampleControls" data-slide-to="@number2.ToString()" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleControls" data-slide-to="@number2.ToString()"></li>
                    }
                    number2 += 1;
                }

            </ol>
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    if (number < 1)
                    {
                        <div class="carousel-item active">
                            <div class="col-12 slider-bg text-center py-5">
                                <h1 class="display-4 font-weight-bold py-5">@item.SliderTitle.ToUpper()</h1>
                                <p class="py-5">
                                    @item.SliderDescription.Substring(0,400).ToString()
                                </p>
                                <a href="/@SeoHelper.ToSeoUrl(item.SliderTitle)/dahafazlasi/id=@item.Id" title="@item.SliderTitle" class="btn btn-block btn-lg w-50 mx-auto my-5" type="button">Daha Fazlası</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <div class="col-12 slider-bg text-center py-5">
                                <h1 class="display-4 font-weight-bold py-5">@item.SliderTitle.ToUpper()</h1>
                                <p class="py-5">
                                    @item.SliderDescription.Substring(0, 400).ToString()
                                </p>
                                <a href="/@SeoHelper.ToSeoUrl(item.SliderTitle)/dahafazlasi/id=@item.Id" title="@item.SliderTitle" class="btn btn-block btn-lg w-50 mx-auto my-5" type="button">Daha Fazlası</a>
                            </div>
                        </div>
                    }
                    number += 1;
                }
            </div>
            <a class="carousel-control-prev" title="Önceki" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" title="Sonraki" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>

