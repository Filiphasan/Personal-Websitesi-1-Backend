@model MyWebsite.Models.Model.SocialMediaAccount

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sosyal Medya Detayları</h2>

<div>
    <h4 class="text-center my-4">Sosyal Medya Linkleri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Facebook)
        </dt>

        <dd>
            <i class="fab fa-facebook-square"></i> @Html.DisplayFor(model => model.Facebook)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Twitter)
        </dt>

        <dd>
            <i class="fab fa-twitter-square"></i> @Html.DisplayFor(model => model.Twitter)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Linkedin)
        </dt>

        <dd>
            <i class="fab fa-linkedin"></i> @Html.DisplayFor(model => model.Linkedin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Github)
        </dt>

        <dd>
            <i class="fab fa-github"></i> @Html.DisplayFor(model => model.Github)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Youtube)
        </dt>

        <dd>
            <i class="fab fa-youtube"></i> @Html.DisplayFor(model => model.Youtube)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id },new { @class="btn btn-info"}) |
    @Html.ActionLink("Geriye Dön", "Index",new { }, new { @class = "btn btn-danger" })
</p>
