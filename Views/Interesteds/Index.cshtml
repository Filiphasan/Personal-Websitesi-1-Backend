@model IEnumerable<MyWebsite.Models.Model.Interesteds>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mb-5">İlgi Alanlarım Bölümü</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Create",new { },new { @class="btn btn-primary"})
</p>
<table class="table table-striped table-responsive-lg">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.Interested)
        </th>
        <th>İşlemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Interested)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id },new { @class="btn btn-info"}) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.Id }, new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
