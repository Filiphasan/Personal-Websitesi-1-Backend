@model IEnumerable<MyWebsite.Models.Model.BlogImages>
@{
    ViewBag.Title = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int number = 0;
}

<div class="col-lg-8 mr-auto">
    <h2 class="text-center mb-5">@ViewBag.blogTitle Resimleri</h2>


    <div class="carousel slide" id="slider1" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                if (number < 1)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100 img-fluid" src="@item.ImagePath" alt="@ViewBag.blogTitle-@number" />
                        <div class="carousel-caption d-none d-md-block">
                            @Html.ActionLink("Resmi Sil", "DeleteImage", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100 img-fluid" src="@item.ImagePath" alt="@ViewBag.blogTitle-@number" />
                        <div class="carousel-caption d-none d-md-block">
                            @Html.ActionLink("Resmi Sil", "DeleteImage", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                }
                number = number + 1;
            }
        </div>
        <a href="#slider1" class="carousel-control-prev" role="button" data-slide="prev">
            <i class="fas fa-arrow-circle-left"></i>
        </a>
        <a href="#slider1" class="carousel-control-next" role="button" data-slide="next">
            <i class="fas fa-arrow-circle-right"></i>
        </a>
    </div>
</div>
<script type="text/JavaScript" src="/Content/MyWebSite/js/jquery.js"></script>
<script type="text/JavaScript" src="/Content/MyWebSite/js/bootstrap.js"></script>